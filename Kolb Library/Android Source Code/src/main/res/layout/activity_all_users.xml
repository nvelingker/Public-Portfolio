<?xml version="1.0" encoding="utf-8"?>

<!-- Description: Creates User management Screen-->
<!-- Authors: Chris Seiler, Tejas Priyadarshi, Neelay Velingker -->
<!-- Version: 1.0 -->

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/customBackground"
    android:textColor="@color/colorPrimaryDark"
    tools:context="kolblibrary.kolblibrary.adminactivities.AllUsersActivity">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/poppins_medium"
        android:text="All Users"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="All Users" />

    <Button
        android:id="@+id/NewUserBtn"
        android:layout_width="330dp"
        android:layout_height="38dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/custom_button"
        android:text="New User"
        android:textColor="@color/customBeigeText"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AllUsersView"
        android:textAllCaps="false" />

    <ListView
        android:id="@+id/AllUsersView"
        android:layout_width="324dp"
        android:layout_height="500dp"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="20dp"
        android:scrollbarStyle="insideOverlay"
        android:divider="@android:drawable/divider_horizontal_bright"
        android:dividerHeight="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle" />
</android.support.constraint.ConstraintLayout>
